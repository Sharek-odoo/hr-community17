<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">


        <record id="employee_transfer_mail_template_approve" model="mail.template">
            <field name="name">Transfer Employee Approve</field>
            <field name="model_id" ref="model_hr_employee_transfer"/>
            <field name="subject">Transfer Announcement</field>
            <field name="email_from">{{(object.company_id.email_formatted or user.email_formatted) }}
            </field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        This Employee Transfer
                        <a t-att-href="object.get_base_url() + '/web#id=%s&amp;model=%s&amp;view_type=form' % (object.id, object._name)"
                           target="_blank">
                            <t t-esc="object.name"/>
                        </a>
                        needs your approval.
                    </p>
                </div>
            </field>
            <field name="lang">{{ object.employee_id.user_id.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        <!-- Notify Email Template -->
        <record id="employee_transfer_mail_template" model="mail.template">
            <field name="name">Transfer</field>
            <field name="model_id" ref="model_hr_employee_transfer"/>
            <field name="subject">Transfer Announcement</field>
            <field name="email_to">{{object.employee_id.work_email or object.employee_id.user_id.partner_id.email}}
            </field>
            <field name="partner_to">{{ object.employee_id.user_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear<t t-out="object.employee_id.name or ''"/>,
                        <br/>
                        <br/>
                        we are happy to officially promote you to [<t t-out="object.new_job_id.name or ''"/>]
                        as of <t t-out="object.effective_date"/>
                        <br/>
                        We appreciate your hard work and commitment to the <t t-out="object.company_id.name or ''"/> team for the past years.
                        Weâ€™re all looking forward to seeing you achieve great things in your new role.
                        <br/>
                        <p>You can access your promotion details from bellow URL</p>
            	       <p><t t-out="object.promotion_url"/></p>

                        Congratulations!

                        Best Regards
                        <t t-out="user.employee_id.name or user.name or ''"/>
                    </p>
                </div>
            </field>
            <field name="lang">{{ object.employee_id.user_id.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>