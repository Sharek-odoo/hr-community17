<odoo>
    <data noupdate="1">
        <record id="group_hr_exception_user" model="res.groups">
            <field name="name">HR Exception Users</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>

        <record id="group_hr_user_exception" model="res.groups">
            <field name="name">HR Approval Exception Users</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>

         <!-- Employee: see only their own requests -->
    <record id="rule_permission_request_employee" model="ir.rule">
        <field name="name">Permission Request: Own</field>
        <field name="model_id" ref="model_hr_permission_request"/>
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user')),(4, ref('base.group_portal'))]"/>
    </record>

    <!-- Employee’s Manager: see requests of their direct reports -->
    <record id="rule_permission_request_manager" model="ir.rule">
        <field name="name">Permission Request: Manager and Own</field>
        <field name="model_id" ref="model_hr_permission_request"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">
            ['|',
                ('employee_id.user_id','=',user.id),
                ('employee_id.parent_id.user_id','=',user.id)]
        </field>
    </record>

    <!-- HR: see all requests -->
    <record id="rule_permission_request_hr" model="ir.rule">
        <field name="name">Permission Request: HR All</field>
        <field name="model_id" ref="model_hr_permission_request"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_user')),(4,ref('hr_exception.group_hr_user_exception'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

    <!-- Employee: see only their own business visit requests -->
    <record id="rule_business_visit_employee" model="ir.rule">
        <field name="name">Business Visit Request: Own</field>
        <field name="model_id" ref="model_hr_business_visit_request"/>
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user')),(4, ref('base.group_portal'))]"/>
    </record>

    <!-- Employee’s Manager: see their own + direct subordinates' requests -->
    <record id="rule_business_visit_manager" model="ir.rule">
        <field name="name">Business Visit Request: Manager and Own</field>
        <field name="model_id" ref="model_hr_business_visit_request"/>
        <!-- No group restriction: applies to any manager in hr.employee -->
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">
            ['|',
                ('employee_id.user_id','=',user.id),
                ('employee_id.parent_id.user_id','=',user.id)
            ]
        </field>
    </record>

    <!-- HR: see all requests -->
    <record id="rule_business_visit_hr" model="ir.rule">
        <field name="name">Business Visit Request: HR All</field>
        <field name="model_id" ref="model_hr_business_visit_request"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_user')),(4,ref('hr_exception.group_hr_user_exception'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>
    </data>
</odoo>