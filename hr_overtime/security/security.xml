<odoo>
	<data noupdate="0">

		<record model="ir.module.category" id="hr_overtime_security_groups">
            <field name="name">OverTime Request</field>
        </record>

		<record id="group_over_time_user" model="res.groups">
	        <field name="name">OverTime User</field>
	        <field name="category_id" ref="hr_overtime.hr_overtime_security_groups"/>
	    </record>
	    <record id="group_over_time_manager" model="res.groups">
	        <field name="name">OverTime Manager</field>
	        <field name="category_id" ref="hr_overtime.hr_overtime_security_groups"/>
	        <field name="implied_ids" eval="[(4, ref('hr_overtime.group_over_time_user'))]"/>
	    </record>
	    <record id="group_over_time_approver" model="res.groups">
	        <field name="name">OverTime Approver</field>
	        <field name="category_id" ref="hr_overtime.hr_overtime_security_groups"/>
	        <field name="implied_ids" eval="[(4, ref('hr_overtime.group_over_time_manager'))]"/>
	    </record>
	    <record id="overtime_record_rule_user" model="ir.rule">
		    <field name="name">Record Rule for overtime user</field>
		    <field ref="model_hr_overtime" name="model_id"/>
		    <field name="domain_force">[('create_uid', '=', user.id)]</field>
		    <field name="groups" eval="[(4, ref('hr_overtime.group_over_time_user'))]"/>
		</record>	
		<record id="overtime_record_rule_manager" model="ir.rule">
		    <field name="name">Record Rule for overtime Manager</field>
		    <field ref="model_hr_overtime" name="model_id"/>
		    <field name="domain_force">[]</field>
		    <field name="groups" eval="[(4, ref('hr_overtime.group_over_time_manager'))]"/>
		</record>	
	</data>
</odoo>