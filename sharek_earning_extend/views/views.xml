<odoo>
    <data>
        <record id="other_earnings_form_view_inherit" model="ir.ui.view">
            <field name="name">other.earnings.form.view.inherit</field>
            <field name="model">other.earnings</field>
            <field name="inherit_id" ref="sharek_other_erinings.other_earnings_form_view"/>
            <field name="arch" type="xml">
                <field name="amount" position="replace">
                    <field name="base_on" required="1"/>
                    <field name="amount" invisible="base_on not in 'amount'"/>
                    <field name="percentage" invisible="base_on not in 'percentage'"/>
                    <field name="no_od_day" invisible="base_on not in 'day'"/>
                </field>
                <xpath expr="//page[@name='earning_lies']" position="replace">
                    <page string="Other Earnings Line" name="earning_lies">
                        <field name="earnings_ids">
                            <tree editable="bottom">
                                <field name="employee_id" required="1"/>
                                <field name="date"/>
                                <field name="base_on" optional="hide"/>
                                <field name="percentage" optional="hide"  readonly="base_on not in 'percentage'"/>
                                <field name="no_od_day" optional="hide" readonly="base_on not in 'day'"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
