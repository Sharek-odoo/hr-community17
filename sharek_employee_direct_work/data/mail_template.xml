<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">


        <record id="employee_direct_work_mail_template_approve" model="mail.template">
            <field name="name">Employee Direct Work Approve</field>
            <field name="model_id" ref="model_employee_direct_work"/>
            <field name="subject">Direct Work Announcement</field>
            <field name="email_from">{{(user.email_formatted) }}
            </field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        This Employee Direct Work
                        <a t-att-href="object.get_base_url() + '/web#id=%s&amp;model=%s&amp;view_type=form' % (object.id, object._name)"
                           target="_blank">
                            <t t-esc="object.name"/>
                        </a>
                        needs your approval.
                    </p>
                </div>
            </field>
            <field name="lang">{{ object.employee_id.user_id.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        
    </data>
</odoo>