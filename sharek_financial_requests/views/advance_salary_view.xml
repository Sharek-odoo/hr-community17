<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_adavance_salary_form" model="ir.ui.view">
        <field name="name">advance.salary.form</field>
        <field name="model">advance.salary</field>
        <field name="arch" type="xml">
            <form string="Advance Salary">
                <header>
                    <button name="action_submit" string="Submit" type="object" invisible="state != 'draft'"
                             class="btn-primary" groups="sharek_hr_employee_loan.group_loan_employee_submit"/>
                    
                    <button name="action_direct_manager_approve" string="Direct Manager Approve" type="object" invisible="state != 'direct_manager'"
                             class="btn-primary" groups="sharek_hr_employee_loan.group_loan_direct_manager"/>

                    <button name="action_department_manager_approve" string="Department Manager Approve" type="object" invisible="state != 'department_manager'"
                             class="btn-primary" groups="sharek_hr_employee_loan.group_loan_department_manager"/>

                    <button name="action_hr_approve" string="HR Manager Approve" type="object" invisible="state != 'hr'" class="btn-primary" groups="sharek_hr_employee_loan.group_loan_hr_manager"/>

                    <button name="action_ceo_approve" string="CEO Approve" type="object" invisible="state != 'ceo'" class="btn-primary" groups="sharek_hr_employee_loan.group_loan_ceo"/>

                    <button name="action_finance_approve" string="Finance Approve" type="object" invisible="state != 'finance'" class="btn-primary" groups="sharek_hr_employee_loan.group_loan_finance_manager"/>

                    <button name="%(action_reject_reason_wizard)d" string="Reject" type="action"
                        context="{'active_model': 'advance.salary', 'active_id': active_id}"
                        invisible="state != 'direct_manager'"
                        groups="sharek_hr_employee_loan.group_loan_direct_manager"
                        class="btn-danger" />

                    <button name="%(action_reject_reason_wizard)d" string="Reject" type="action"
                        context="{'active_model': 'advance.salary', 'active_id': active_id}"
                        invisible="state != 'department_manager'"
                        groups="sharek_hr_employee_loan.group_loan_department_manager"
                        class="btn-danger" />
                    
                    <button name="%(action_reject_reason_wizard)d" string="Reject" type="action"
                        context="{'active_model': 'advance.salary', 'active_id': active_id}"
                        invisible="state != 'hr'"
                        groups="sharek_hr_employee_loan.group_loan_hr_manager"
                        class="btn-danger" />

                    <button name="%(action_reject_reason_wizard)d" string="Reject" type="action"
                        context="{'active_model': 'advance.salary', 'active_id': active_id}"
                        invisible="state != 'ceo'"
                        groups="sharek_hr_employee_loan.group_loan_ceo"
                        class="btn-danger" />
                        

                    <button name="%(action_reject_reason_wizard)d" string="Reject" type="action"
                        context="{'active_model': 'advance.salary', 'active_id': active_id}"
                        invisible="state != 'finance'"
                        groups="sharek_hr_employee_loan.group_loan_finance_manager"
                        class="btn-danger" />   


                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'direct_manager'"  class="btn-danger" groups="sharek_hr_employee_loan.group_loan_direct_manager"/>  
                    

                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'department_manager'" class="btn-danger" groups="sharek_hr_employee_loan.group_loan_department_manager"/>  


                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'hr'" class="btn-danger" groups="sharek_hr_employee_loan.group_loan_hr_manager"/>  


                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'ceo'" class="btn-danger" groups="sharek_hr_employee_loan.group_loan_ceo"/>  


                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'finance'" class="btn-danger" groups="sharek_hr_employee_loan.group_loan_finance_manager"/>                   

                    <button name="action_set_draft" string="Set Draft" type="object" invisible="state not in ('rejected','cancel')" class="btn-primary"/> 


                    <field name="state" widget="statusbar" statusbar_visible="draft,direct_manager,department_manager,hr,ceo"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_vendor_bill_advance"
                            string="Vendor Bill"
                            type="object"
                            invisible="vendor_bill_id == False"
                            icon="fa-money"
                            class="oe_stat_button"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                        <field name="employee_id" readonly="state != 'draft'"/>
                        <field name="vendor_bill_id" readonly="1" invisible="1"/>
                        <field name="employee_no" force_save="1"/>
                        <field name="current_department_id" force_save="1"/>
                        <field name="manager_id" force_save="1"/>
                        <field name="current_job_id" force_save="1"/>  
                        <field name="rejection_reason" readonly="1"/>
                        <field name="company_id" readonly="1"/>
                        <field name="first_approve_id" invisible="state not in ('finance','approved')" required="state == 'finance'" readonly="state == 'approved'"/>
                    </group>
                    <group>
                        <field name="request_date" readonly="state != 'draft'"/>
                        <field name="reason" readonly="state != 'draft'"/>
                        <field name="attachment_ids" widget="many2many_binary" readonly="state != 'draft'"/>
                        <field name="salary_taken" readonly="state != 'draft'"/>
                        <field name="total_gross_salary" string="Current Gross Salary" force_save="1" readonly="1"/>
                        <field name="gross_salary" string="New Gross Salary"/>
                        

                    </group>
                        
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_salary_advance_tree" model="ir.ui.view">
        <field name="name">salary.advance.tree</field>
        <field name="model">advance.salary</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="request_date"/>
                <field name="employee_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_salary_advance" model="ir.actions.act_window">
        <field name="name">Salary Advance</field>
        <field name="res_model">advance.salary</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_salary_advance" name="Salary Advance Requests"
              parent="menu_requests_finance"
              action="action_salary_advance" sequence="2"/>        
</odoo>