<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_children_education_allowance_form" model="ir.ui.view">
        <field name="name">children.education.allowance.form</field>
        <field name="model">children.education.allowance</field>
        <field name="arch" type="xml">
            <form string="Children Education Allowance">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="btn-primary" invisible="state != 'draft'"
                    groups="sharek_hr_employee_loan.group_loan_employee_submit" />

                    <button name="action_hr_approve" string="HR Approve" type="object" class="btn-primary" invisible="state != 'hr_approved'" groups="sharek_hr_employee_loan.group_loan_hr_manager"/>

                    <button name="action_finance_approve" string="Finance Approve" type="object" class="btn-primary" invisible="state != 'finance_approved'" groups="sharek_hr_employee_loan.group_loan_finance"/>


                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'hr_approved'" class="btn-danger" groups="sharek_hr_employee_loan.group_loan_hr_manager"/>  

                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'finance_approved'" class="btn-danger" groups="sharek_hr_employee_loan.group_loan_finance"/>

                     
                    <button name="action_set_draft" string="Set Draft" type="object" invisible="state not in ('rejected','cancel')" class="btn-primary"/>  

                    <button name="%(action_reject_reason_wizard)d" string="Reject" type="action"
                        context="{'active_model': 'children.education.allowance', 'active_id': active_id}"
                        invisible="state != 'hr_approved'"
                        groups="sharek_hr_employee_loan.group_loan_hr"
                        class="btn-danger" />

                    <button name="%(action_reject_reason_wizard)d" string="Reject" type="action"
                        context="{'active_model': 'children.education.allowance', 'active_id': active_id}"
                        invisible="state != 'finance_approved'"
                        class="btn-danger" 
                        groups="sharek_hr_employee_loan.group_loan_finance_manager"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,hr_approved,finance_approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_vendor_bill"
                            string="Vendor Bill"
                            type="object"
                            invisible="vendor_bill_id == False"
                            icon="fa-money"
                            class="oe_stat_button"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                        <field name="employee_id" readonly="state != 'draft'"/>
                        <field name="vendor_bill_id" readonly="1" invisible="1"/>
                        <field name="employee_no" force_save="1"/>
                        <field name="current_department_id" force_save="1"/>
                        <field name="current_job_id" force_save="1"/> 
                        <field name="grade_id" force_save="1"/>
                        <field name="academic_year" readonly="state != 'draft'"/> 
                        <field name="first_approve_id" invisible="state not in ('finance_approved','approved')" required="state == 'finance_approved'" readonly="state == 'approved'"/>
                    </group>
                    <group>
                        <field name="request_date" readonly="state != 'draft'"/>
                        <field name="manager_id" force_save="1"/>
                        <field name="reason" readonly="state != 'draft'"/>
                        <field name="attachment_ids" widget="many2many_binary" readonly="state != 'draft'"/>
                        <field name="company_id" readonly="1"/>
                        <field name="rejection_reason" readonly="1"/>
                    </group>
                        
                    </group>
                    <notebook>
                    <page string="Children Allowance Details">
                        <field name="line_ids" >
                            <tree editable="bottom">
                                <field name="employee_id" column_invisible="1"/>
                                <field name="family_id" readonly="parent.state != 'draft'"/>
                                <field name="relationship" readonly="parent.state != 'draft'"/>
                                <field name="id_no" readonly="parent.state != 'draft'"/>
                                <field name="birth_date" readonly="parent.state != 'draft'"/>
                                <field name="marital" readonly="parent.state != 'draft'"/>
                                <field name="amount" readonly="parent.state != 'hr_approved'"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="total_amount" readonly="1" string="Total Amount"/>
                        </group>
                    </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
            
        </field>
    </record>

    <record id="view_children_education_allowance_tree" model="ir.ui.view">
        <field name="name">children.education.allowance.tree</field>
        <field name="model">children.education.allowance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="request_date"/>
                <field name="employee_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_children_education_allowance" model="ir.actions.act_window">
        <field name="name">Children Education Allowance</field>
        <field name="res_model">children.education.allowance</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_financial_request_root" name="Financial Requests" web_icon="sharek_financial_requests,static/description/icon.png" groups="sharek_financial_requests.group_financial_request_user"/>

    <menuitem id="menu_requests_finance" name="Requests" parent="menu_financial_request_root"/>
    <menuitem id="menu_children_education" name="Children Education Requests"
              parent="menu_requests_finance"
              action="action_children_education_allowance" sequence="1"/>

            
</odoo>