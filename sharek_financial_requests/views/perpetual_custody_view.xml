<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_perpetual_custody_form" model="ir.ui.view">
        <field name="name">perpetual.custody.form</field>
        <field name="model">perpetual.custody</field>
        <field name="arch" type="xml">
            <form string="Perpetual Custody">
                <header>
                    <button name="action_submit" string="Submit" type="object" invisible="state != 'draft'"
                             class="btn-primary" groups="sharek_hr_employee_loan.group_loan_employee_submit"/>
                    

                    <button name="action_direct_manager_approve" string="Direct Manager Approve" type="object"
                        invisible="state != 'direct_manager'"
                            class="btn-primary" groups="sharek_hr_employee_loan.group_loan_direct_manager"/>

                    <button name="action_finance1_approve" string="Finance Review Approve" type="object"
                            class="btn-primary"
                            invisible="state != 'finance_1'" groups="sharek_hr_employee_loan.group_loan_finance"/>

                    <button name="action_ceo_approve" string="CEO Approve" type="object"
                            class="btn-primary"
                            invisible="state != 'ceo'" groups="sharek_hr_employee_loan.group_loan_ceo"/>

                    <button name="action_finance2_approve" string="Final Finance Approve" type="object"
                            class="btn-primary"
                            invisible="state != 'finance_2'" groups="sharek_hr_employee_loan.group_loan_finance_manager"/>



                    <button name="%(action_reject_reason_wizard)d" string="Reject" type="action"
                        context="{'active_model': 'perpetual.custody', 'active_id': active_id}"
                        invisible="state != 'direct_manager'"
                        class="btn-danger" 
                        groups="sharek_hr_employee_loan.group_loan_direct_manager"/>


                    <button name="%(action_reject_reason_wizard)d" string="Reject" type="action"
                        context="{'active_model': 'perpetual.custody', 'active_id': active_id}"
                        invisible="state != 'finance_1'"
                        class="btn-danger" 
                        groups="sharek_hr_employee_loan.group_loan_finance"/>
                        

                    <button name="%(action_reject_reason_wizard)d" string="Reject" type="action"
                        context="{'active_model': 'perpetual.custody', 'active_id': active_id}"
                        invisible="state != 'finance_2'"
                        class="btn-danger" 
                        groups="sharek_hr_employee_loan.group_loan_finance"/>
                        

                    <button name="%(action_reject_reason_wizard)d" string="Reject" type="action"
                        context="{'active_model': 'perpetual.custody', 'active_id': active_id}"
                        invisible="state != 'ceo'"
                        class="btn-danger" 
                        groups="sharek_hr_employee_loan.group_loan_ceo"/>            

                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'direct_manager'" class="btn-danger" groups="sharek_hr_employee_loan.group_loan_direct_manager"/> 


                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'finance_1'" class="btn-danger" groups="sharek_hr_employee_loan.group_loan_finance_manager"/>


                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'finance_2'" class="btn-danger" groups="sharek_hr_employee_loan.group_loan_finance_manager"/> 

                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'ceo'" class="btn-danger" groups="sharek_hr_employee_loan.group_loan_ceo"/> 
                     
                    <button name="action_set_draft" string="Set Draft" type="object" invisible="state not in ('rejected','cancel')" class="btn-primary"/> 
                        
                    <field name="state" widget="statusbar" statusbar_visible="draft,direct_manager,finance_1,ceo"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_vendor_bill_custody_1"
                            string="Journal Entry"
                            type="object"
                            invisible="vendor_bill_id == False"
                            icon="fa-money"
                            class="oe_stat_button"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                        <field name="employee_id" readonly="state != 'draft'"/>
                        <field name="vendor_bill_id" readonly="1" invisible="1"/>
                        <field name="employee_no" force_save="1"/>
                        <field name="current_department_id" force_save="1"/>
                        <field name="current_job_id" force_save="1"/>  
                        <field name="custody_account_id" invisible="state not in ('finance_2','approved')" required="state == 'finance_2'" readonly="state == 'approved'"/>
                        <field name="custody_jouranl_id" invisible="state not in ('finance_2','approved')" required="state == 'finance_2'" readonly="state == 'approved'"/>
                        <field name="first_approve_id" invisible="state not in ('finance_2','approved')" required="state == 'finance_2'" readonly="state == 'approved'"/>
                    </group>
                    <group>
                        <field name="request_date" readonly="state != 'draft'"/>
                        <field name="manager_id" force_save="1"/>
                        <field name="reason" readonly="state != 'draft'"/>
                        <field name="attachment_ids" widget="many2many_binary" readonly="state != 'draft'"/>
                        <field name="amount" readonly="state != 'draft'"/>
                        <field name="company_id" readonly="1"/>
                        <field name="rejection_reason" readonly="1"/>

                    </group>
                        
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_perpetual_custody_tree" model="ir.ui.view">
        <field name="name">perpetual.custody.tree</field>
        <field name="model">perpetual.custody</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="request_date"/>
                <field name="employee_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_perpetual_custody" model="ir.actions.act_window">
        <field name="name">Perpetual Custody</field>
        <field name="res_model">perpetual.custody</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_perpetual_custody" name="Perpetual Custody Requests"
              parent="menu_requests_finance"
              action="action_perpetual_custody" sequence="4"/>        
</odoo>