<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_appraisal_goal_view_form" model="ir.ui.view">
            <field name="name">Appraisal Goals</field>
            <field name="model">hr.appraisal.goal</field>
            <field name="arch" type="xml">
                <form string="Appraisal Goals">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="name"/>
                                <field name="description" invisible="1"/>
                                 <field name="company_id" options="{'no_open': True, 'no_create': True}"
                                groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="sequence" />
                                <field name="weight" />

                            </group>
                         </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_appraisal_goal_view_tree" model="ir.ui.view">
            <field name="name">Appraisal Goals</field>
            <field name="model">hr.appraisal.goal</field>
            <field name="arch" type="xml">
                <tree string="Appraisal Goals">
                    <field name='sequence' widget='handle'/>
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="hr_appraisal_goal_view_search" model="ir.ui.view">
            <field name="name">hr.appraisal.goal.view.search</field>
            <field name="model">hr.appraisal.goal</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <separator/>
                    <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_hr_appraisal_goal" model="ir.actions.act_window">
            <field name="name">Job Competences</field>
            <field name="res_model">hr.appraisal.goal</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="hr_appraisal_goal_view_tree"/>
            <field name="domain">[]</field>
            <field name="search_view_id" ref="hr_appraisal_goal_view_search"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create your appraisal goal here.
              </p>
            </field>
        </record>

        <menuitem id="menu_appraisal_goal" name="Appraisal Goals" sequence="2" 
            parent="sharek_hr_appraisal.menu_appraisal_configuration" action="action_hr_appraisal_goal"/>

    </data>
</odoo>