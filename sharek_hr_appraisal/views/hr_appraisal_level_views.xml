<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_appraisal_competency_level_form" model="ir.ui.view">
            <field name="name">hr.appraisal.competency.level.form</field>
            <field name="model">hr.appraisal.competency.level</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="sequence"/>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_hr_appraisal_competency_level_tree" model="ir.ui.view">
            <field name="name">hr.appraisal.competency.level.tree</field>
            <field name="model">hr.appraisal.competency.level</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_hr_appraisal_competency_level" model="ir.actions.act_window">
            <field name="name">Competency Levels</field>
            <field name="res_model">hr.appraisal.competency.level</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="menu_appraisal_level" name="Appraisal Levels" sequence="5"
                  parent="sharek_hr_appraisal.menu_appraisal_configuration" action="action_hr_appraisal_competency_level"/>

    </data>
</odoo>