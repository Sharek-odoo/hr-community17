<odoo>
  <data>
    <!-- Contract View -->
    <record id="hr_contract_form_inherit_allowances" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
 			<xpath expr="//group[@name='allowances']" position="inside">
                <label for="hr_productivity_allowance" invisible="1"/>
                <div  class="o_row mw-50">
                    <field name="hr_productivity_allowance"  invisible="1"/>
                    <span  invisible="1">/ month</span>
                </div>
            </xpath>
        </field>
    </record>
  </data>
</odoo>
