<odoo>
    <data>
        <record id="view_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                  <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='work_email']" position="after">
                        <field name="sponsor"/>
                        <field name="nal"/>
                    </xpath>
                <xpath expr="//page[@name='personal_information']" position="after">
                    <page string="Family" name="family" autofocus="autofocus" groups="hr.group_hr_user">
                        <field name="family_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="name" required="1"/>
                                <field name="name_ar" required="1"/>
                                <field name="relationship" required="1"/>
                                <field name="id_no" required="1"/>
                                <field name="birth_date" required="1"/>
                                <field name="phone" required="1"/>
                                <field name="marital" required="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
