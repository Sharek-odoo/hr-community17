<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_refuse_reason_wizard" model="ir.ui.view">
    <field name="name">refuse.reason.wizard.form</field>
    <field name="model">training.needs.request.refuse.wizard</field>
    <field name="arch" type="xml">
        <form string="Refuse Reason">
            <group>
                <field name="refuse_reason" required="1"/>
            </group>
            <footer>
                <button string="Refuse" type="object" name="action_confirm" class="btn btn-primary"/>
                <button string="Cancel" special="cancel" class="btn-secondary"/>
            </footer>
        </form>
    </field>
</record>

	<record id="action_open_refuse_wizard" model="ir.actions.act_window">
    <field name="name">Refuse Reason</field>
    <field name="res_model">training.needs.request.refuse.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="context">{'default_training_needs_id': active_id}</field>
</record>


    <record id="view_training_refuse_reason_wizard" model="ir.ui.view">
    <field name="name">trainig.refuse.reason.wizard.form</field>
    <field name="model">training.request.refuse.wizard</field>
    <field name="arch" type="xml">
        <form string="Refuse Reason">
            <group>
                <field name="refuse_reason" required="1"/>
            </group>
            <footer>
                <button string="Refuse" type="object" name="action_confirm" class="btn btn-primary"/>
                <button string="Cancel" special="cancel" class="btn-secondary"/>
            </footer>
        </form>
    </field>
</record>

    <record id="action_open_training_refuse_wizard" model="ir.actions.act_window">
    <field name="name">Refuse Reason</field>
    <field name="res_model">training.request.refuse.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="context">{'default_training_id': active_id}</field>
    </record>


</odoo>