<odoo>
    <template id="report_payslip_arabic_name" inherit_id="hr_payroll.report_payslip">
         <xpath expr="//h2" position="replace">
            <t t-if="o.env.user.lang.startswith('ar')">
                <h2 id="payslip_name"><span>ايصال راتب</span> - <span t-field="o.employee_id.arabic_name"/></h2>
            </t>
            <t t-else="">
                <h2 id="payslip_name_eng"><span t-field="o.payslip_run_id.name"/> - <span t-field="o.employee_id.arabic_name"/></h2>
            </t>
        </xpath>
        <xpath expr="//table//tr[2]//td[1]" position="replace">
            <t t-if="o.env.user.lang.startswith('ar')">
                <td><span t-field="o.employee_id.arabic_name"/></td>
               
            </t>
            <t t-else="">
               <td><span t-field="o.employee_id"/></td>
            </t>
        </xpath>
        <xpath expr="//table[1]" position="replace">
            <table name="employee-infos" id="employee_info_table_1" class="table table-sm table-bordered">
                <tr id="employee_info_line_1">
                    <t t-if="o.env.user.lang.startswith('ar')">
                        <td class="w-25"><strong>الموظف</strong></td>
                        <td class="w-25"><strong>المسمى الوظيفي</strong></td>
                        <td class="w-25"><strong>فترة الراتب</strong></td>
                    </t>
                    <t t-else="">
                    <td class="w-25"><strong>Employee</strong></td>
                    <td class="w-25"><strong>Designation</strong></td>
                    <td class="w-25"><strong>Pay Period</strong></td>
                    </t>
                </tr>
                <tr id="employee_info_line_2">
                    <t t-if="o.env.user.lang.startswith('ar')">
                <td><span t-field="o.employee_id.arabic_name"/></td>
               
            </t>
            <t t-else="">
               <td><span t-field="o.employee_id"/></td>
            </t>
                    <td><span t-field="o.employee_id.job_title"/></td>
                    <td>
                        <span t-if="o.date_from &lt; o.contract_id.date_start" t-field="o.contract_id.date_start">Start Date</span>
                        <span t-else="" t-field="o.date_from">From</span>
                        <span t-if="o.contract_id.date_end and o.date_to &gt; o.contract_id.date_end" t-field="o.contract_id.date_end">End Date</span>
                        <span t-else="" t-field="o.date_to">To</span>
                    </td>
                </tr>
                <!--<tr id="employee_info_line_3">-->
                <!--    <td><span t-field="o.employee_id.private_street"/></td>-->
                <!--    <td></td>-->
                <!--    <td></td>-->
                <!--</tr>-->
                <tr id="employee_info_line_4">
                    <t t-if="o.env.user.lang.startswith('ar')">
                        <td class="w-25"><strong>الايميل</strong></td>
                        <td class="w-25"><strong>الهوية</strong></td>
                        <td class="w-25"><strong>تاريخ بداية العقد</strong></td>
                    </t>
                     <t t-else="">
                        <td><strong>Email</strong></td>
                        <td><strong>Identification</strong></td>
                        <td class="w-25"><strong>Contract Start Date</strong></td>
                     </t>
                </tr>
                <tr id="employee_info_line_5">
                    <td><span t-field="o.employee_id.work_email"/></td>
                    <td name="identification-id"><span t-field="o.employee_id.identification_id"/></td>
                    <td><span t-field="o.employee_id.first_contract_date"/></td>
                </tr>
            </table>
        </xpath>

        <xpath expr="//table[2]//tr[1]//td[1]" position="replace">
            <t t-if="o.env.user.lang.startswith('ar')">
                <td class="w-25"><strong>الراتب الإجمالي (<span class="text-capitalize" t-out="o.contract_id.wage_type"/>)</strong></td>
            </t>
            <t t-else="">
                <td class="w-25"><strong>Basic Salary (<span class="text-capitalize" t-out="o.contract_id.wage_type"/>)</strong></td>
            </t>
        </xpath>
        <xpath expr="//div[@id='total']//table" position="replace">
            <table class="table table-sm">
                    <thead class="o_black_border">
                        <tr>
                            <t t-if="o.env.user.lang.startswith('ar')">
                                <th id="line_header_name">الاسم</th>
                                <th id="line_header_days">عدد الايام</th>
                                <th id="line_header_amount" class="text-end">مبلغ</th>
                            </t>
                            <t t-else="">
                                <th id="line_header_name">Name</th>
                                <th id="line_header_days">Number of Days</th>
                                <th id="line_header_amount" class="text-end">Amount</th>
                            </t>
                        </tr>
                    </thead>
                    <tbody>
                        <t id="worked_days_lines">
                            <span t-foreach="o.worked_days_line_ids.filtered(lambda worked_days: worked_days.code != 'OUT' and worked_days.amount != 0)" t-as="worked_days">
                                <tr style="color:none">
                                    <td id="worked_days_name">
                                        <span t-field="worked_days.name"/>
                                    </td>
                                    <td id="worked_days_days"><span t-field="worked_days.number_of_days"/></td>
                                    <td id="worked_days_amount" class="text-end"><span t-out="worked_days.amount" digits="[42, 2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/></td>
                                </tr>
                            </span>
                        </t>
                        <t id="payslip_lines">
                            <span t-foreach="o.line_ids.filtered(lambda line: line.appears_on_payslip and line.total != 0)" t-as="line">
                                <t t-set="line_styling" t-value="line.get_payslip_styling_dict()"/>
                                <t t-set="line_style"/>
                                <t t-set="line_class"/>
                                <t t-if="line.code in line_styling">
                                    <t t-set="line_style" t-value="line_styling[line.code]['line_style']"/>
                                    <t t-set="line_class" t-value="line_styling[line.code]['line_class']"/>
                                </t>
                                <tr t-att-class="line_class" t-att-style="line_style" id="line_display">
                                    <td id="payslip_line_name"><span t-field="line.name"/></td>
                                    <!--<td id="payslip_line_rate"></td>-->
                                    <td id="payslip_line_quantity"><span t-if="line.quantity &gt; 1" t-esc="line.quantity"/></td>
                                    <td id="payslip_line_total" class="text-end"><span t-esc="line.total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}" t-att-style="'color:#875A7B;' if line.total &lt; 0 else ''"/></td>
                                </tr>
                            </span>
                        </t>
                    </tbody>
                </table>
            
        </xpath>
         <xpath expr="//div[@id='to_pay']//p[1]" position="replace">
             <t t-if="o.env.user.lang.startswith('ar')">
                <p t-if="o.net_wage &gt;= 0">للدفع في <b><span t-field="o.employee_id.bank_account_id">xxxxxxxxxxxx</span></b> من <i><span t-field="o.employee_id.arabic_name"/></i>: <span t-field="o.net_wage"/></p>
            </t>
            <t t-else="">
                <p t-if="o.net_wage &gt;= 0">To pay on <b><span t-field="o.employee_id.bank_account_id">xxxxxxxxxxxx</span></b> of <i><span t-field="o.employee_id"/></i>: <span t-field="o.net_wage"/></p>
            </t>
         </xpath>
        
    </template>
</odoo>
