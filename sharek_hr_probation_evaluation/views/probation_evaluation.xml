<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_probation_evaluation_form" model="ir.ui.view">
        <field name="name">hr.probation.evaluation.form</field>
        <field name="model">hr.probation.evaluation</field>
        <field name="arch" type="xml">
            <form string="Probation Evaluation">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit,confirmed,approved"/>
                    
                    <button name="action_submit"
                            string="Submit"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-secondary"
                            invisible="state != 'submit'"
                            groups="sharek_employee_direct_work.group_hr_department_manager"/>

                    <button name="action_approve"
                            string="Approve"
                            type="object"
                            class="btn-success"
                            invisible="state != 'confirmed'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="employee_number" readonly="1"/>
                            <field name="designation" readonly="1"/>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="current_user_can_grade" invisible="1"/>
                        </group>
                        <group>
                            <field name="department_id" readonly="1"/>
                            <field name="starting_date" readonly="1"/>
                            <field name="previous_end_trial_period" readonly="1"/>
                            <field name="end_trial_period"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Evaluation Criteria">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="element_g" readonly="parent.state != 'draft'"/>
                                    <field name="grade" column_invisible="parent.state == 'draft'" required="parent.state == 'submit'" readonly="parent.current_user_can_grade == False"/>
                                    <field name="notes" readonly="parent.state != 'draft'"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Recommendation">
                            <group>
                                <field name="recommendation" readonly="state == 'approved'" required="state == 'submit'"/>
                                <field name="notes" readonly="state != 'draft'"/>
                                <field name="evaluation_date" readonly="state != 'draft'"/>
                                <field name="evaluator_id" readonly="state != 'draft'"/>
                            </group>
                        </page>
                    </notebook>
                    <group colspan="12">
                        <group colspan="8">
                        </group>
                <group colspan="4">
                    <group class="oe_subtotal_footer" name="average_box">
                        <label for="average_score" string="Average Grade"/>
                        <div>
                            <field name="average_score" readonly="1"/>
                        </div>
                    </group>
                </group>    
            </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hr_probation_evaluation_tree" model="ir.ui.view">
        <field name="name">hr.probation.evaluation.tree</field>
        <field name="model">hr.probation.evaluation</field>
        <field name="arch" type="xml">
            <tree string="Probation Evaluations">
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="recommendation"/>
                <field name="evaluation_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_probation_evaluation" model="ir.actions.act_window">
        <field name="name">Probation Evaluations</field>
        <field name="res_model">hr.probation.evaluation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hr_probation_root" name="Employee Evaluations" parent="hr.menu_hr_root"/>
    <menuitem id="menu_hr_probation_evaluation" name="Evaluations" parent="menu_hr_probation_root" action="action_hr_probation_evaluation"/>
</odoo>