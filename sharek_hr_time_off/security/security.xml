<odoo>

    <record id="module_category_time_off" model="ir.module.category">
        <field name="name">Time Off</field>
        <field name="sequence">15</field>
    </record> 


    <record id="group_ceo" model="res.groups">
        <field name="name">CEO</field>
        <field name="category_id" ref="sharek_hr_time_off.module_category_time_off"/>
    </record>

        <!-- Employee Submit Group -->
    <record id="group_employee_submit" model="res.groups">
        <field name="name">Employee Submit</field>
        <field name="category_id" ref="sharek_hr_time_off.module_category_time_off"/>
    </record>

    <!-- Direct Manager Group -->
    <record id="group_direct_manager" model="res.groups">
        <field name="name">Direct Manager</field>
        <field name="category_id" ref="sharek_hr_time_off.module_category_time_off"/>
    </record>

    <!-- Sector Manager Group -->
    <record id="group_sector_manager" model="res.groups">
        <field name="name">Sector Manager</field>
        <field name="category_id" ref="sharek_hr_time_off.module_category_time_off"/>
    </record>

    <!-- HR Group -->
    <record id="group_hr_timeoff" model="res.groups">
        <field name="name">HR</field>
        <field name="category_id" ref="sharek_hr_time_off.module_category_time_off"/>
    </record>

    <record id="hr_leave_rule_sector_manager" model="ir.rule">
        <field name="name">Sector Manager: See my team's leaves</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="domain_force">[('state','=','sector_manager'), ('employee_id.parent_id.parent_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('sharek_hr_time_off.group_sector_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="hr_leave_rule_ceo" model="ir.rule">
        <field name="name">CEO: See all leaves in CEO state</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="domain_force">[('state', '=', 'ceo')]</field>
        <field name="groups" eval="[(4, ref('sharek_hr_time_off.group_ceo'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    
</odoo>