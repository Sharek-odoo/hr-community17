<odoo>
    <!-- Rule: Only show leave balances of current user's company -->
    <record id="hr_leave_balance_rule_company" model="ir.rule">
        <field name="name">Leave Balance: Multi-company Rule</field>
        <field name="model_id" ref="sharek_hr_timeoff_extension.model_hr_leave_balance"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/> <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="group_leave_balance" model="res.groups">
        <field name="name">Leave Balance Manager</field>
    </record>
</odoo>