<odoo>
    <record id="view_bank_account_update_request_form" model="ir.ui.view">
        <field name="name">bank.account.update.request.form</field>
        <field name="model">bank.account.update.request</field>
        <field name="arch" type="xml">
            <form string="Bank Account Update Request">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="btn-primary" invisible = "state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-success" invisible = "state != 'hr_approval'"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" invisible = "state != 'hr_approval'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,hr_approval,approved,rejected"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    <button name="action_open_bank_account"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-university"
                            invisible = "bank_account_id == False">
                        <field name="bank_account_id" string="Bank Account" widget="statinfo"/>
                    </button>
                </div>
                <div class="oe_title">
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                                <br/>
                            </h1>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="employee_partner"/>
                            <field name="iban_number"/>
                            <field name="bank_account_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="account_number"/>
                            <field name="bank_id"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_bank_account_update_request_tree" model="ir.ui.view">
        <field name="name">bank.account.update.request.tree</field>
        <field name="model">bank.account.update.request</field>
        <field name="arch" type="xml">
            <tree string="Bank Account Update Requests">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="iban_number"/>
                <field name="account_number"/>
                <field name="bank_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_bank_account_update_request" model="ir.actions.act_window">
        <field name="name">Bank Account Update Requests</field>
        <field name="res_model">bank.account.update.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_bank_account_update_root" name="Bank Account Updates" parent="hr.menu_hr_root"/>
    <menuitem id="menu_bank_account_update_request" name="Requests" parent="menu_bank_account_update_root" action="action_bank_account_update_request"/>

    
</odoo>