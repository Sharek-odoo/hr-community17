<?xml version='1.0' encoding='utf-8'?>

<!-- In this file don't use the <odoo> tag. -->

<template xml:space='preserve'>

    <t t-name="softatt_attendance.dashboard_template" owl='1'>

        <style>
           
                .order-card {
                    color: #fff;
                }
                
              
                .bg-c-green {
            <!-- background:  linear-gradient(230deg, #0e2432, #8c99a2); -->
            background: #69f595;
            }
            .bg-c-red {
            <!-- background:  linear-gradient(230deg, #0e2432, #8c99a2); -->
            background: #f56970;
            }
            .bg-c-blue {
            <!-- background:  linear-gradient(230deg, #0e2432, #8c99a2); -->
            background: #69bdf5;
            }


            .card {
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2.94px 0.06px rgba(4,26,55,0.16);
            box-shadow: 0 1px 2.94px 0.06px rgba(4,26,55,0.16);
            border: none;
            margin-bottom: 30px;
            -webkit-transition: all 0.3s ease-in-out;
            transition: all 0.3s ease-in-out;

            }

            .card .card-block {
            padding: 25px;

            }

            .order-card i {
            font-size: 40px;
            }

            .f-left {
            float: left;
            }

            .f-right {
            float: right;
            }

            .text {
            font-size:20px;

            }

            .link {
            display:block;
            margin: 1px 0em 0.5em 1.5em;
            text-decoration: underline;
            color:white;
            text-shadow: 1px 1px 10px #000000;
            font-size:20px;
            cursor: pointer;

            }

            .hover {
            transition: transform 0.3s ease-in-out;
            cursor: pointer;
            }

            .hover:hover {
            transform: scale(1.05);
            }


            /*? SCROLL */
            .scroll::-webkit-scrollbar {
            width: 10px;
            }

            .scroll::-webkit-scrollbar-track {
            margin: 0.5rem 0;
            border-radius: var(--radius);
            }

            .scroll::-webkit-scrollbar-thumb {
            background-color: var(--btn-color);
            border-radius: 60px;
            }

            .scroll::-webkit-scrollbar-thumb:hover {
            background-color: #fffa;
            }
                
            

        </style>


        <div class="container-fluid vh-100 overflow-y-scroll bg-muted scroll">
            <br/>

            <div class='row justify-content-between'>
                <div class='col-xl-7 col-lg-12 col-md-12 col-sm-12'>

                    <div class='row justify-content-center'>
                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 hover" t-on-click='open_total_employee'>
                            <div class="card bg-c-blue order-card">
                                <div class="card-block">
                                    <h6 class="m-b-20">
                                        <span style='color:white; text-shadow: 1px 1px  10px #000000; font-size:18px;'>Employees</span>
                                    </h6>
                                    <h3 class="m-b-0" style='color:white; text-shadow: 1px 1px  10px #000000;'>
                                        <i class="fa fa-users f-left"/>
                                        <t t-if="state.present_employee">
                                            <span class="f-right" style='font-size:35px'
                                                  t-esc="state.present_employee[2]"/>
                                        </t>
                                    </h3>
                                </div>


                            </div>
                        </div>


                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 hover" t-on-click='open_present_employee'>
                            <div class="card bg-c-green order-card">
                                <div class="card-block">
                                    <h6 class="m-b-20">
                                        <span style='color:white; text-shadow: 1px 1px  10px #000000; font-size:18px;'>Present</span>
                                    </h6>

                                    <h3 class="m-b-0" style='color:white; text-shadow: 1px 1px  10px #000000;'>
                                        <i class="fa fa-check f-left"/>
                                        <t t-if="state.present_employee">
                                            <span class="f-right" style='font-size:35px'
                                                  t-esc="state.present_employee[0]"/>
                                        </t>
                                    </h3>
                                </div>


                            </div>
                        </div>


                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 hover " t-on-click='open_absent_employee'>
                            <div class="card bg-c-red order-card">
                                <div class="card-block">
                                    <h6 class="m-b-20">
                                        <span style='color:white; text-shadow: 1px 1px  10px #000000; font-size:18px;'>Absent</span>
                                    </h6>
                                    <h3 class="m-b-0" style='color:white; text-shadow: 1px 1px  10px #000000;'>
                                        <i class="fa fa-times f-left"/>
                                        <t t-if="state.absent_employee">
                                            <span class="f-right" style='font-size:35px'
                                                  t-esc="state.absent_employee[0]"/>
                                        </t>
                                    </h3>

                                </div>

                            </div>
                        </div>

                    </div>


                    <div class='row justify-content-left'>
                            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 hover" t-on-click='open_exempt_employee'>
                                <div class="card bg-c-green order-card">
                                    <div class="card-block">
                                        <h6 class="m-b-20">
                                            <span style='color:white; text-shadow: 1px 1px 10px #000000; font-size:18px;'>Exempt Employees</span>
                                        </h6>
                                        <h3 class="m-b-0" style='color:white; text-shadow: 1px 1px 10px #000000;'>
                                            <i class="fa fa-users f-left"/>
                                            <t t-if="state.exempt_employee">
                                                <span class="f-right" style='font-size:35px'
                                                      t-esc="state.exempt_employee[0]"/>
                                            </t>
                                        </h3>
                                    </div>
                                </div>
                            </div>

                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 hover" t-on-click='open_time_off_employee'>
                                <div class="card bg-c-green order-card">
                                    <div class="card-block">
                                        <h6 class="m-b-20">
                                            <span style='color:white; text-shadow: 1px 1px 10px #000000; font-size:18px;'>Time Off Employees</span>
                                        </h6>
                                        <h3 class="m-b-0" style='color:white; text-shadow: 1px 1px 10px #000000;'>
                                            <i class="fa fa-users f-left"/>
                                            <t t-if="state.time_off_employee">
                                               <span class="f-right" style='font-size:35px' t-esc="state.time_off_employee[0]"/>
                                            </t>
                                        </h3>
                                    </div>
                                </div>
                            </div>


                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 hover" t-on-click='open_permission_employee'>
                                <div class="card bg-c-green order-card">
                                    <div class="card-block">
                                        <h6 class="m-b-20">
                                            <span style='color:white; text-shadow: 1px 1px 10px #000000; font-size:18px;'>Permissions</span>
                                        </h6>
                                        <h3 class="m-b-0" style='color:white; text-shadow: 1px 1px 10px #000000;'>
                                            <i class="fa fa-users f-left"/>
                                            <t t-if="state.exempt_employee">
                                                <span class="f-right" style='font-size:35px'
                                                      t-esc="state.permission_employee[0]"/>
                                            </t>
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>


                    <div id="sa_pie_charts" class="row justify-content-center">
                        <div class="col col-xl-6">
                            <div class="m-2 p-3">
                                <div class="d-flex align-items-center justify-content-center">
                                    <h3 class="text-primary fw-bold">Absence/Department</h3>
                                </div>
                                <PieChart/>
                            </div>
                        </div>
                    </div>


                    <!-- <div class="row justify-content-center">

                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 ">
                            <div class="shadow-sm border m-1 p-2 bg-white">
                                <ChartRenderer type= "'pie'"/>
                            </div>
                        </div>


                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 ">
                            <div class="shadow-sm border m-1 p-2 bg-white">
                                <ChartRenderer type= "'pie'"/>
                            </div>
                        </div>


                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 ">
                            <div class="shadow-sm border m-1 p-2 bg-white">
                                <ChartRenderer type= "'pie'"/>
                            </div>
                        </div>

                    </div> -->
                </div>


                <div class='col-xl-5 col-lg-12 col-md-12 col-sm-12 mt-1'>
                    <div class='row justify-content-center'>


                        <div class="row justify-content-center overflow-x-scroll scroll">
                            <div>
                                <div>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <h3 class="text-primary fw-bold">Last 5 Records</h3>
                                    </div>
                                    <Log/>
                                </div>
                            </div>
                        </div>


                        <div class="row justify-content-center overflow-x-scroll scroll">
                            <div>
                                <div>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <h3 class="text-primary fw-bold">Late Today</h3>
                                    </div>
                                    <Late/>
                                </div>
                            </div>
                        </div>




                    </div>
                </div>



            </div>
            <br/>
            <br/>
            <br/>
            <br/>
            <br/>
        </div>



    </t>

</template>