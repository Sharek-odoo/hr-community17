<?xml version='1.0' encoding='utf-8'?>

<template xml:space='preserve'>

    <t t-name="softatt_attendance.LastTenLogs" owl = '1'>
        <table class="table table-striped  ">
            <thead>
                <tr>
                    <th scope="col">Punch Time</th>
                    <th scope="col">Employee</th>
                    <th scope="col">Department</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="state.last_ten_logs" t-as="line" t-key="line.id">
                    <tr >
                        <td>
                            <span>
                                <t t-if="line.check_in_check_out == 'Check Out'">
                                    <span class='badge text-bg-danger' style='font-size: 13px' t-esc="line.punch_time"/>

                                </t>
                                <t t-elif="line.check_in_check_out == 'Check In'">
                                    <span class='badge text-bg-success'  style='font-size: 13px' t-esc="line.punch_time"/>
                                </t>
                                <t t-else="">
                                    <span class='badge text-bg-secondary'  style='font-size: 13px' t-esc="line.punch_time"/>
                                </t>
                            </span>
                        </td>

                        <td>
                            <t t-esc="line.employee"/>
                        </td>

                        <td>
                            <t t-esc="line.department"/>
                        </td>
                    </tr>
                </t>


            </tbody>
        </table>
    </t>

</template>