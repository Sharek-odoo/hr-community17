<?xml version="1.0" encoding="utf-8"?>
<odoo>


    
    <record id="hr_attendance.view_hr_attendance_kanban" model="ir.ui.view">
        <field name="name">hr_attendance.kanban</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">

            <kanban class="o_kanban_mobile" sample="1">
                <field name="employee_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="late_minutes"/>
                <field name="overtime_hours"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <img t-att-src="kanban_image('hr.employee', 'avatar_128', record.employee_id.raw_value)" 
                                     t-att-title="record.employee_id.value" 
                                     t-att-alt="record.employee_id.value" 
                                     class="oe_kanban_avatar o_image_24_cover mr4"/>
                                <span class="o_kanban_record_title">
                                    <strong><t t-esc="record.employee_id.value"/></strong>
                                </span>
                            </div>
                            <hr class="mt4 mb8"/>
                            <div class="o_kanban_record_subtitle">
                                <div class="o_kanban_side_by_side">
                                    <div class="box green-box">
                                        <span><t t-esc="record.check_in.value"/></span>
                                    </div>
                                    <div class="box red-box">
                                        <span><t t-esc="record.check_out.value"/></span>
                                    </div>
                                </div>
                            </div>
                            <hr class="mt4 mb8"/>
                            <div class="o_kanban_record_subtitle">
                                <div>
                                    <div>
                                        <span><t t-esc="record.late_minutes.value"/> Minutes Late</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>   
        </field>
    </record>

    
    <record id="softatt_inheirt_hr_attendance_tree" model="ir.ui.view">
        <field name="name">hr_attendance.tree</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree" />
        <field name="arch" type="xml">
            <field name="check_out" position="after">
                    <!-- #!! -->
                <field name="location_id"  optional="hide" readonly="1"/>
                <field name="late_minutes" optional="show"/>
            </field>
            <field name="in_latitude"       position="replace"/>
            <field name="in_longitude"      position="replace"/>
            <field name="out_latitude"      position="replace"/>
            <field name="out_longitude"     position="replace"/>
            <field name="in_country_name"   position="replace"/>
            <field name="out_country_name"  position="replace"/>
            <field name="in_mode"           position="replace"/>
            <field name="out_mode"          position="replace"/>
            <field name="in_city"           position="replace"/>
            <field name="out_city"          position="replace"/>
            <field name="write_uid"         position="replace"/>
            <field name="write_date"        position="replace"/>
        </field>
    </record>

    <record id="softatt_inherit_hr_attendance_view_filter" model="ir.ui.view">
        <field name="name">hr_attendance.search</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_filter" />
        <field name="arch" type="xml">

            <field name="department_id" position="after">
                <searchpanel>
                    <field name="location_id" icon="fa-building" enable_counters="1"/>
                    <field name="department_id" icon="fa-users" enable_counters="1"/>
                </searchpanel>

                <field name="location_id" />
            </field>
        </field>
    </record>


    <record id="softatt_hr_attendance_view_form" model="ir.ui.view">
        <field name="name">hr_attendance_view_form.form</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form" />
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <field name="location_id" 
                options="{ 'no_open': True}"
                 readonly="1"/>
            </field>

            <field name="overtime_hours" position="after">
                <field name="late_minutes" readonly="1==1"/>
            </field>
        </field>
    </record>

    <record id="hr_attendance.hr_attendance_action" model="ir.actions.act_window">
        <field name="name">Attendances</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="hr_attendance.hr_attendance_view_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No attendance records found
            </p><p>
                The attendance records of your employees will be displayed here.
            </p>
        </field>
    </record>
    
</odoo>
