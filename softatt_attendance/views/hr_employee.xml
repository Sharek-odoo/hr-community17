<odoo>


    <record id="hr_employee_softatt_form" model="ir.ui.view">
        <field name="name">hr_employee_softatt.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group>
                    <group>
                        <field name="attendance_type" />
                        <field name="exempt_from_attendance"/>
                    </group>
                </group>
            </xpath>
            
    

            <page name="public" position="before">
                <page name="att_codes" string="Device Codes">
                    <field name="code_ids">
                        <tree editable="bottom">
                            <field name="device_id"
                                options="{'no_create_edit': True, 'no_create': True}" />
                            <field name="code" />
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>

</odoo>