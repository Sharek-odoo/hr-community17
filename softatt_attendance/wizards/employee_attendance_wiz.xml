<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sa_attendance_employee_report_wiz_form" model="ir.ui.view">
        <field name="name">employee.wiz.form</field>
        <field name="model">sa.employee.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Employee Report" class="oe_form_configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="date_from" required="1==1"/>
                            <field name="employee_ids" widget="many2many_tags" required="1"/>

                        </group>
                        <group>
                            <field name="date_to" required="1==1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="View/عرض" type="object" class="btn-primary"/>
                    <button name="action_export_to_excel" string="Excel/إكسيل" type="object" class="btn-success"/>
                    <button string="Cancel/الغاء" special="cancel" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>




    <record id="action_sa_attendance_employee_report_wizard" model="ir.actions.act_window">
        <field name="name">Employee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sa.employee.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
