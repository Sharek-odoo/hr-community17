<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job to delete old biometric logs every 3 days -->
        <record id="ir_cron_delete_old_biometric_logs" model="ir.cron">
            <field name="name">Softatt Hub: Delete old Signals</field>
            <field name="model_id" ref="softatt_attendance_zk_extension.model_sa_biometric_log"/>
            <field name="state">code</field>
            <field name="code">model.delete_old_signals()</field>
            <field name="interval_number">3</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>


        <!-- Cron job to update device status based on signals -->
        <record id="ir_cron_update_device_state" model="ir.cron">
            <field name="name">Softatt Hub: Update Device State</field>
            <field name="model_id" ref="softatt_attendance_zk_extension.model_sa_biometric_device"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_device_state()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>
