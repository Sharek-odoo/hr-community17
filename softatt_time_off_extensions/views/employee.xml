<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <record id="view_hr_employee_dayoff_wizard" model="ir.ui.view">
        <field name="name">hr.employee.dayoff.wizard.form</field>
        <field name="model">hr.employee.dayoff</field>
        <field name="arch" type="xml">
            <form string="Add Employee Day Off">
                <group>
                    <field name="employee_id" readonly="1"/>

                    <group>
                        <field name="date"/>
                    </group>

                    <group>
                        <field name="sa_day_off"/>
                    </group>
                </group>
            </form>
        </field>
    </record>


    <record id="action_open_employee_dayoff_wizard" model="ir.actions.act_window">
        <field name="name">Add Employee Day Off</field>
        <field name="res_model">hr.employee.dayoff</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_employee_id': active_id}</field>
    </record>

    <record id="hr_employee_softatt_inherit_form" model="ir.ui.view">
        <field name="name">hr_employee_softatt.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">

            <field name="resource_calendar_id" position="after">
                <field name="sa_day_off" 
                readonly="1==1"
                />
                <field name="sa_digital_signature" widget="image"/>
            </field>

            <xpath expr="//notebook" position="inside">
                <page string="Day Off Records" groups="base.group_no_one">
                    <field name="sa_day_off_ids">
                        <tree editable="bottom">
                            <field name="date"/>
                            <field name="sa_day_off"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="%(softatt_time_off_extensions.action_open_employee_dayoff_wizard)d" type="action" string="Add Day Off" class="oe_highlight"  groups="hr_holidays.group_hr_holidays_responsible"/>
            </xpath>
        </field>
    </record>

</odoo>
